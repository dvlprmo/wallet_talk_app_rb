

<div class="touch">
    <%= link_to "Add Poster", new_poster_path, class:"holder submer" %>
</div>
 

<div class="con container">
 
  <div class="center row">
 <% @posters.each do |post| %>

    <div class="holder col-md-3">
       
          <%= image_tag(post.imgprofile, size: "200x180") %> 
          <br>
           <%= post.name %>
           <br>
           <%= post.overview %>  
           <br>
           <div class="linksbtn">
           <%= link_to '✏️', edit_poster_path(post), class:" holder1 submer1" %>
           <a class="holder1 submer1" data-confirm="Do you want to delete <%= post.name %> ?"
            href="/posters/<%= post.id %>" data-method="delete"> <span class="delete">🗑</span></a>
           <%= link_to "➡", new_poster_path, class:"holder1 submer1" %> 
           
     
</div>
    </div>
   
     
  <%end %>
  </div>

 
</div>



