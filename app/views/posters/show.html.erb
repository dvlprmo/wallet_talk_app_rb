

<p id="notice"><%= notice %></p>
<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Type</th>
      <th>URL</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @poster.posts.each do |post| %>
      <tr>
  
        <td><%= post.post_typle %></td>
        <td><%= post.post_url %></td>
        <td><%= post.created_at.strftime("%b %d, %Y") %></td>
        <td><%= link_to 'Edit', edit_poster_post_path(@poster, post), class: "mtd btn buttons" %></td>
        <td><%= link_to 'Delete', poster_post_path(@poster, post), class: "mtd btn buttons", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Note', post_notes_path(post), class: "mtd btn buttons" %></td>

      
      </tr> 
    <% end %>
  </tbody>
</table>
 
<br>

<div class="toucher">
<%= link_to 'Back', posters_path, class: "mtd btn buttons" %>
<%= link_to 'New Post', new_poster_post_path(@poster), class: "mtd btn buttons" %>
</div>