

<p id="notice"><%= notice %></p>
<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Type</th>
      <th>URL</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @poster.posts.each do |post| %>
      <tr>
        <td><%= post.post_typle %></td>
        <td><%= post.post_url %></td>
        <td><%= post.created_at %></td>

        <td><%= link_to 'Edit', edit_poster_post_path(@poster, post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 
<br>

<div class="toucher">
<%= link_to 'Back', posters_path, class: "mtd btn buttons" %>
<%= link_to 'New Post', new_poster_post_path(@poster), class: "mtd btn buttons" %>
</div>